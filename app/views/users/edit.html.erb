<div class="wrapper">
	<%= form_for @user do |f|%>
		<%= f.label :username %>
		<br><br>
		<%= f.text_field :username %>
		<br><br>
		<%= f.label :password %>
		<br>
		<%= f.password_field :password %>
		<br><br>

		<%= f.submit :update %>

	<% end %>


	<p><%= link_to "Delete User", @user, method: :delete %></p>
</div>